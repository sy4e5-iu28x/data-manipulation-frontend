{
    // ブラウザでのデバッグ用設定
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "デバッグ用に Edge を起動する",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${webRoot}/*"
            }
        }
    ]
}